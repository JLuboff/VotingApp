<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Create Poll</title>

<!--  <link rel="stylesheet" type="text/css" href="./css/style.css"> -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.3/css/bulma.css" type="text/css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet">
</head>
<body>
  <section class="hero is-primary is-fullheight">
    <div class="hero-head">
      <header class="nav">
        <div class="container">
          <div class="nav-left">
            <a class="nav-item" href="/">FCC-Voting</a>
          </div>
          <div class="nav-right">
            <a class="nav-item" href="/addpoll">Add poll</a>
            {{#if user}}
            <p class="nav-item"><img src="{{avatar}}" />&nbsp; {{user}}
            </p>
            <a class="nav-item" href="/logout">Logout</a>
            {{else}}
            <a class="nav-item" href="/login"> Login</a>
            {{/if}}
          </div>
        </div>
      </header>
    </div>

    <!--
  <nav class="navbar is-primary">
      <div class="navbar-brand">
      <a class="navbar-item" href="#">FCC-Voting</a>
    </div>
    <div class="navbar-menu">
      <div class="navbar-start">
      <a class="navbar-item" href="/addpoll">Add poll</a>
    </div>
  </div>
</nav> -->

    <div class="columns">
      <div class="column is-half is-offset-one-quarter content">
        <h1 class="notification is-primary has-text-centered"> Select a poll below {{user}}</h1>
      </div>
</div>
  <div class="columns is-multiline is-gapless has-text-centered">
    {{#each data}}
    <div class="column is-3"></div>
    <div class="column is-6">
       <a class="button is-large is-inverted is-primary is-outlined" href="/poll/{{_id}}"> {{pollName}} </a>
    </div>
    <div class="column is-3"></div>

    {{/each}}
</div>


  <footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <h6>Created by <a href="#">Jason Luboff</a></h6>
    </div>
  </div>
</footer>

</section>
</body>
</html>
